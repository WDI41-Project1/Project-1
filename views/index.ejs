
<% if (message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<h3 id="place"><i>Let's go places..</i></h3>



<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators" >
      <li data-target="#myCarousel" data-slide-to="0" class="active" id="slide"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
      <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="./../images/louvre.jpg" alt="Paris">
        <div class="carousel-caption">
        <h3>Paris</h3>
        <p>We love the Cake!</p>
        </div>
      </div>
      <div class="item">
        <img src="./../images/vietnam1.jpg" alt="Vietnam">
        <div class="carousel-caption">
        <h3>Vietnam</h3>
        <p>Green, Blue, Food!</p>
        </div>
      </div>

      <div class="item">
        <img src="./../images/greece2.jpg" alt="Greece">
        <div class="carousel-caption">
        <h3>Zeus or Hera?</h3>
        <p>Greece is an amazing place to go!</p>
        </div>
      </div>

      <div class="item">
        <img src="./../images/capadoccia3.jpg" alt="Turkey">
        <div class="carousel-caption">
        <h3>Turkey</h3>
        <p>Take me to the sky!</p>
        </div>
      </div>
  
     <div class="item">
        <img src="./../images/shanghai.jpg" alt="China">
        <div class="carousel-caption">
        <h3>China - Shanghai</h3>
        <p>Visit the renowned international metropolis.</p>
        </div>
      </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>